{
    "name": "froso",
    "version": "1.0.0",
    "description": "Headless Content Management System built on Express, MongoDB and React",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MateuszCh/froso.git"
    },
    "author": "Mateusz Chybiorz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MateuszCh/froso/issues"
    },
    "homepage": "https://github.com/MateuszCh/froso#readme",
    "scripts": {
        "build": "rm -rf lib && tsc",
        "dev": "ts-node src/server.ts",
        "dev-watch": "nodemon",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint"
    },
    "devDependencies": {
        "nodemon": "^1.18.10",
        "prettier": "^1.16.4",
        "ts-node": "^8.0.3",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.4.1",
        "typescript-tslint-plugin": "^0.3.1"
    }
}
